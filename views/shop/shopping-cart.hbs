{{#if products}}
<div class='row'>
  <div class='col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3'>
    <ul class='list-group'>
      {{#each products}}
      <li class='list-group-item'>
        <h3>{{this.item.title}}</h3>
        <h5>Shop: {{this.item.shop}}</h5>
        <h5>${{this.price}}</h5>
        <div class='btn-group'>
          <img src="{{this.item.imagePath}}" style="height: 20%; width:20%;" alt="..." class="img-responsive">
          <div class="details-wrapper">
            <div class="items counter-wrapper">
              <div class="items__control" data-action="minus"><a href='/reduce/{{this.item._id}}'>-</a></div>
              <div class="items__current" data-counter>{{this.qty}}</div>
              <div class="items__control" data-action="plus"><a href='/increase/{{this.item._id}}'>+</a></div>
            </div>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>
<div class='row'>
  <div class='col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3'>
    <strong>Total: ${{totalPrice}}</strong>
  </div>
</div>
<hr />
<div class='row'>
  <div class='col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3'>
    <a href='/checkout' type='button' class='btn btn-success'>Checkout</a>
  </div>
</div>
{{else}}
<div class='row'>
  <div class='col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3'>
    <h2>No Items in Cart</h2>
  </div>
</div>
{{/if}}